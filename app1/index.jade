extend ../layout.jade

block javascripts
    script(src="js/app.js")

block titulo
    | Creaci√≥n de Grafo por medio de Trayectorias

block controlador
    div(class="row")
        div(class="col")
            h3(class="text-center") Crear Trayecto

            div(class="form-horizontal")
                div(class="form-group", ng-repeat="item in trayectoria track by $index")
                    label(class="col-sm-2 control-label") Nodo {{ $index + 1 }}
                    div(class="col-sm-2")
                        input(type="number", class="form-control", ng-model="item.id")
                div(class="form-group")
                    div(class="col-sm-offset-1")
                        button(class="btn btn-danger", ng-click="quitarNodo()") 
                            i(class="glyphicon glyphicon-minus")
                            |  Quitar Nodo
                        button(class="btn btn-primary", ng-click="addNodo()") 
                            i(class="glyphicon glyphicon-plus")
                            |  Agregar Nodo
                        button(class="btn btn-success", ng-click="crearTrayecto()") 
                            |  Crear Trayecto
                        label
                            input(type="checkbox", ng-model="nodoMovimiento", ng-change="toggleMovimiento()") 
                            | Habilitar Movimiento de Nodos
