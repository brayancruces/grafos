div(ng-show="nodoEdit")
    legend Nodo {{ nodoEdit.id }} conectado a:
    div(class="form-group",ng-repeat="item in nodo.conexiones")
        | Nodo 
        strong " {{ item }} " 
        | por 
        select(class="form-control", ng-model="nodoEdit.conexiones[item]")
